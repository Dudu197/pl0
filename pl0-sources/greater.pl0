(* -*- mode:pascal; -*-
 * Exemplo de programa em PL/0.
 * Realiza comparação se valor a é maior que b.
 *)

var x, y;

procedure greater(a, b);
var r;
begin
  if a > b then !a + " é maior que " + b;
  if b > a then !b + " é maior que " + a
end;

begin
  !"Entre com o primeiro número";
  ?x;
  !"Entre com o segundo número";
  ?y;
  call greater(x, y)
end.
