(* -*- mode:pascal; -*-
 * Exemplo de programa em PL/0.
 * Lê um nome como String, sua idade como inteiro e imprime uma concatenação de ambos valores.
 *)

var intro, nome, idade;
begin
    intro := "Entre com o seu nome:";
    !intro;
    !"Favor colocar entre aspas duplas";
    ?nome;
    !"Quantos anos você tem?";
    ?idade;
    !"Seu nome é " + nome + " e você tem " + idade + " de idade."
end.
